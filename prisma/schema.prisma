datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id String @id
    idType IDType @default(NIK)
    name String
    hash String
    role Role
}

// for security, one valid session at a time
model Session {
    id String @id
    cookie String @unique
}

enum Role {
    Admin
    User
}

enum IDType {
    NIK
    KTA
}