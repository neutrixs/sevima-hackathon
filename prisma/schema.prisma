datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
    id String @id
    idType IDType @default(NIK)
    name String
    hash String
    role Role
}

enum Role {
    Admin
    User
}

enum IDType {
    NIK
    KTA
}

// for security, one valid session at a time
model Session {
    id String @id
    cookie String @unique
}

model Event {
    id Int @id @default(autoincrement())
    name String
    startEpoch Int
    endEpoch Int
    winnerID String?
    candidateIDs String[]
}

model Candidate {
    id String @id
    name String
    description String
}